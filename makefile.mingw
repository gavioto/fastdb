	$(CC) $(CFLAGS) src/server.cpp

subsql.exe: subsql.o $(FASTDB_LIB)
	$(LD) $(LDFLAGS) -o subsql.exe subsql.o $(FASTDB_LIBS) $(STDLIBS) $(SOCKLIBS)

